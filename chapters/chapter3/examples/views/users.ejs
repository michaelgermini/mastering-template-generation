<%- include('layout', { body: `
<!-- Page Header -->
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-users me-2"></i>User Directory</h1>
            <p class="lead">Browse and search through our user database</p>
        </div>
    </div>
</div>

<!-- Filters Section -->
<div class="container mb-4">
    <div class="filter-section">
        <form method="GET" action="/users" class="row g-3">
            <div class="col-md-4">
                <label for="search" class="form-label">Search</label>
                <input type="text" class="form-control" id="search" name="search" 
                       value="${filters.search || ''}" placeholder="Search by name or email">
            </div>
            <div class="col-md-3">
                <label for="department" class="form-label">Department</label>
                <select class="form-select" id="department" name="department">
                    <option value="">All Departments</option>
                    <% departments.forEach(function(dept) { %>
                        <option value="${dept}" ${filters.department === dept ? 'selected' : ''}>${dept}</option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-3">
                <label for="role" class="form-label">Role</label>
                <select class="form-select" id="role" name="role">
                    <option value="">All Roles</option>
                    <% roles.forEach(function(role) { %>
                        <option value="${role}" ${filters.role === role ? 'selected' : ''}>${role}</option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>Filter
                </button>
            </div>
        </form>
        
        <% if (filters.search || filters.department || filters.role) { %>
            <div class="mt-3">
                <a href="/users" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-times me-1"></i>Clear Filters
                </a>
            </div>
        <% } %>
    </div>
</div>

<!-- Users Grid -->
<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <h3>${users.length} User${users.length !== 1 ? 's' : ''} Found</h3>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary" onclick="setViewMode('grid')">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary" onclick="setViewMode('list')">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <% if (users.length > 0) { %>
        <div class="row" id="users-grid">
            <% users.forEach(function(user) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="${user.avatar}" alt="${user.name}" class="user-avatar me-3">
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">${user.name}</h5>
                                    <p class="text-muted mb-0">${user.role}</p>
                                </div>
                                <div class="text-end">
                                    <% if (user.isAdmin) { %>
                                        <span class="badge badge-admin">
                                            <i class="fas fa-crown me-1"></i>Admin
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <p class="mb-1">
                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                    <a href="mailto:${user.email}" class="text-decoration-none">${user.email}</a>
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-building me-2 text-muted"></i>${user.department}
                                </p>
                                <p class="mb-1">
                                    <i class="fas fa-calendar me-2 text-muted"></i>Joined ${formatDate(user.joinedDate)}
                                </p>
                                <p class="mb-0">
                                    <i class="fas fa-circle me-2 ${user.isActive ? 'text-success' : 'text-secondary'}"></i>
                                    ${user.isActive ? 'Active' : 'Inactive'}
                                </p>
                            </div>
                            
                            <% if (user.skills && user.skills.length > 0) { %>
                                <div class="mb-3">
                                    <small class="text-muted">Skills:</small><br>
                                    <% user.skills.slice(0, 3).forEach(function(skill) { %>
                                        <span class="badge bg-light text-dark me-1">${skill}</span>
                                    <% }); %>
                                    <% if (user.skills.length > 3) { %>
                                        <span class="badge bg-secondary">+${user.skills.length - 3} more</span>
                                    <% } %>
                                </div>
                            <% } %>
                            
                            <div class="d-flex gap-2">
                                <a href="/users/${user.id}" class="btn btn-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i>View Profile
                                </a>
                                <button class="btn btn-outline-secondary btn-sm" onclick="showUserModal(${user.id})">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- List View (Hidden by default) -->
        <div class="row d-none" id="users-list">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Role</th>
                                        <th>Department</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Joined</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user) { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="${user.avatar}" alt="${user.name}" class="user-avatar me-2" style="width: 40px; height: 40px;">
                                                    <div>
                                                        <strong>${user.name}</strong>
                                                        <% if (user.isAdmin) { %>
                                                            <span class="badge badge-admin ms-1">
                                                                <i class="fas fa-crown"></i>
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>${user.role}</td>
                                            <td>${user.department}</td>
                                            <td>
                                                <a href="mailto:${user.email}" class="text-decoration-none">${user.email}</a>
                                            </td>
                                            <td>
                                                <span class="badge ${user.isActive ? 'bg-success' : 'bg-secondary'}">
                                                    ${user.isActive ? 'Active' : 'Inactive'}
                                                </span>
                                            </td>
                                            <td>${formatDate(user.joinedDate)}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/users/${user.id}" class="btn btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button class="btn btn-outline-secondary" onclick="showUserModal(${user.id})">
                                                        <i class="fas fa-info-circle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h4>No Users Found</h4>
                    <p class="text-muted">
                        <% if (filters.search || filters.department || filters.role) { %>
                            No users match your current filters. Try adjusting your search criteria.
                        <% } else { %>
                            There are no users in the system at the moment.
                        <% } %>
                    </p>
                    <% if (filters.search || filters.department || filters.role) { %>
                        <a href="/users" class="btn btn-primary">
                            <i class="fas fa-times me-1"></i>Clear Filters
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>
</div>

<!-- User Modal -->
<div class="modal fade" id="userModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userModalBody">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>
</div>

<script>
function setViewMode(mode) {
    const gridView = document.getElementById('users-grid');
    const listView = document.getElementById('users-list');
    
    if (mode === 'grid') {
        gridView.classList.remove('d-none');
        listView.classList.add('d-none');
    } else {
        gridView.classList.add('d-none');
        listView.classList.remove('d-none');
    }
}

function showUserModal(userId) {
    // In a real application, you would fetch user data via AJAX
    // For this demo, we'll show a simple message
    const modalBody = document.getElementById('userModalBody');
    modalBody.innerHTML = \`
        <div class="text-center">
            <i class="fas fa-spinner fa-spin fa-2x mb-3"></i>
            <p>Loading user details...</p>
        </div>
    \`;
    
    const modal = new bootstrap.Modal(document.getElementById('userModal'));
    modal.show();
    
    // Simulate loading
    setTimeout(() => {
        modalBody.innerHTML = \`
            <p>Detailed user information for user ID \${userId} would be displayed here.</p>
            <p>This could include:</p>
            <ul>
                <li>Complete profile information</li>
                <li>Activity history</li>
                <li>Permissions and roles</li>
                <li>Contact information</li>
            </ul>
        \`;
    }, 1000);
}

// Auto-submit form when filters change
document.addEventListener('DOMContentLoaded', function() {
    const filterForm = document.querySelector('form[method="GET"]');
    const filterInputs = filterForm.querySelectorAll('select, input[type="text"]');
    
    filterInputs.forEach(input => {
        input.addEventListener('change', () => {
            filterForm.submit();
        });
    });
});
</script>
` }) %>

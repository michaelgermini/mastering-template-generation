<%- include('layout', { body: `
<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-code me-3"></i>
                    Template Generation Demo
                </h1>
                <p class="lead mb-4">
                    A comprehensive demonstration of template engines, web development techniques, 
                    and modern templating practices. Explore how templates power dynamic web applications.
                </p>
                <div class="d-flex gap-3">
                    <a href="/users" class="btn btn-light btn-lg">
                        <i class="fas fa-users me-2"></i>View Users
                    </a>
                    <a href="/products" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-shopping-cart me-2"></i>Browse Products
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-layer-group" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="container mb-5">
    <div class="row">
        <div class="col-md-4">
            <div class="stats-card text-center">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h3 class="mb-2">${stats.totalUsers}</h3>
                <p class="mb-0">Total Users</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card text-center">
                <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                <h3 class="mb-2">${stats.totalProducts}</h3>
                <p class="mb-0">Products Available</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card text-center">
                <i class="fas fa-user-check fa-3x mb-3"></i>
                <h3 class="mb-2">${stats.activeUsers}</h3>
                <p class="mb-0">Active Users</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Users Section -->
<section class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users me-2"></i>Featured Users</h2>
                <a href="/users" class="btn btn-outline-primary">View All Users</a>
            </div>
        </div>
    </div>
    
    <div class="row">
        <% users.forEach(function(user) { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <img src="${user.avatar}" alt="${user.name}" class="user-avatar me-3">
                            <div>
                                <h5 class="card-title mb-1">${user.name}</h5>
                                <p class="text-muted mb-0">${user.role}</p>
                            </div>
                        </div>
                        
                        <p class="card-text">
                            <i class="fas fa-envelope me-2"></i>${user.email}<br>
                            <i class="fas fa-building me-2"></i>${user.department}<br>
                            <i class="fas fa-calendar me-2"></i>Joined ${formatDate(user.joinedDate)}
                        </p>
                        
                        <div class="mb-3">
                            <% if (user.isAdmin) { %>
                                <span class="badge badge-admin me-1">
                                    <i class="fas fa-crown me-1"></i>Admin
                                </span>
                            <% } %>
                            <% if (!user.isActive) { %>
                                <span class="badge bg-secondary me-1">
                                    <i class="fas fa-user-slash me-1"></i>Inactive
                                </span>
                            <% } %>
                        </div>
                        
                        <% if (user.skills && user.skills.length > 0) { %>
                            <div class="mb-3">
                                <small class="text-muted">Skills:</small><br>
                                <% user.skills.forEach(function(skill) { %>
                                    <span class="badge bg-light text-dark me-1">${skill}</span>
                                <% }); %>
                            </div>
                        <% } %>
                        
                        <a href="/users/${user.id}" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Profile
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<!-- Featured Products Section -->
<section class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shopping-cart me-2"></i>Featured Products</h2>
                <a href="/products" class="btn btn-outline-primary">View All Products</a>
            </div>
        </div>
    </div>
    
    <div class="row">
        <% products.forEach(function(product) { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <img src="${product.image}" class="card-img-top product-image" alt="${product.name}">
                    <div class="card-body">
                        <h5 class="card-title">${product.name}</h5>
                        <p class="card-text">${product.description}</p>
                        
                        <div class="mb-3">
                            <% if (product.onSale) { %>
                                <span class="price sale-price">${formatCurrency(product.salePrice)}</span>
                                <span class="original-price ms-2">${formatCurrency(product.price)}</span>
                                <span class="badge badge-sale ms-2">SALE!</span>
                            <% } else { %>
                                <span class="price">${formatCurrency(product.price)}</span>
                            <% } %>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-tag me-1"></i>${product.category}<br>
                                <i class="fas fa-boxes me-1"></i>${product.stock} in stock<br>
                                <i class="fas fa-star me-1"></i>${product.rating}/5 rating
                            </small>
                        </div>
                        
                        <a href="/products/${product.id}" class="btn btn-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<!-- Features Section -->
<section class="container mb-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2>Template Engine Features</h2>
            <p class="lead">Explore the powerful features of modern template engines</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-code fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Template Inheritance</h5>
                    <p class="card-text">
                        Create reusable layouts and extend them across multiple pages 
                        for consistent design and reduced code duplication.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-puzzle-piece fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Partials & Components</h5>
                    <p class="card-text">
                        Build modular templates with reusable components that can be 
                        included anywhere in your application.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-magic fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Dynamic Content</h5>
                    <p class="card-text">
                        Generate dynamic content with conditional logic, loops, and 
                        data binding for interactive web applications.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
` }) %>
